<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Property"
        default-menu-include="false"
        default-menu-index="4">

    <parameter name="orderId"/>
    <parameter name="orderPartSeqId"/>
    <parameter name="partyId"/>

    <transition name="createProperty">
        <service-call name="mkdecision.dashboard.OrderServices.create#Property" in-map="context" out-map="context"/>
        <default-response url="../Agreement">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="partyId"/>
            <parameter name="assetId"/>
        </default-response>
    </transition>

    <widgets>
        <form-single name="PropertyForm" transition="createProperty">
            <field name="orderId"><default-field><hidden/></default-field></field>
            <field name="orderPartSeqId"><default-field><hidden/></default-field></field>
            <field name="partyId"><default-field><hidden/></default-field></field>

            <field name="propertyHeader">
                <default-field>
                    <label text="New Application" type="h4" style="margin-b-1"/>
                    <label text="Property" type="h5" style="margin-b-1"/>
                    <label text="Please enter property information to continue." style="margin-b-1"/>
                    <container style="h-separator margin-tb-2"/>
                </default-field>
            </field>
            <field name="assetTypeEnumId">
                <default-field title="Property Type">
                    <drop-down allow-empty="true">
                        <entity-options text="${description}" key="${enumId}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="AssetType"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </default-field>
            </field>
            <field name="salvageValue">
                <default-field title="Current Property Value (Estimate)">
                    <text-line/>
                </default-field>
            </field>
            <field name="acquireCost">
                <default-field title="Original Purchase Price">
                    <text-line/>
                </default-field>
            </field>
            <field name="hoaFeeMonthly">
                <default-field title="HOA Fee Monthly">
                    <text-line/>
                </default-field>
            </field>
            <field name="propertyTaxesAnnually">
                <default-field title="Property Taxes Annually">
                    <text-line/>
                </default-field>
            </field>
            <field name="propertyInsuranceCostsAnnually">
                <default-field title="Property Insurance Costs Annually">
                    <text-line/>
                </default-field>
            </field>

            <field name="mortgageHeader">
                <default-field>
                    <label text="Identity Information" type="h5" style="margin-tb-1"/>
                    <label text="Please enter mortgage information to continue." style="margin-tb-1"/>
                    <container style="h-separator margin-tb-1"/>
                </default-field>
            </field>
            <field name="lenderName">
                <default-field title="Lender Name">
                    <text-line/>
                </default-field>
            </field>
            <field name="mortgageBalance">
                <default-field title="Mortgage Balance">
                    <text-line/>
                </default-field>
            </field>
            <field name="mortgagePaymentMonthly">
                <default-field title="Mortgage Payment Monthly">
                    <text-line/>
                    <label text="Exclude property taxes, insurance, or HOA fees" style="text-caption"/>
                </default-field>
            </field>


            <field name="submitButton">
                <default-field title="Continue">
                    <submit/>
                </default-field>
            </field>

            <field-layout>
                <field-ref name="propertyHeader"/>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="assetTypeEnumId"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="salvageValue"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="acquireCost"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="hoaFeeMonthly"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="propertyTaxesAnnually"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="propertyInsuranceCostsAnnually"/></field-col>
                </field-col-row>

                <field-ref name="mortgageHeader"/>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="lenderName"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="mortgageBalance"/></field-col>
                </field-col-row>
                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12"><field-ref name="mortgagePaymentMonthly"/></field-col>
                </field-col-row>

                <fields-not-referenced/>

                <field-col-row>
                    <field-col xs="12" sm="12" md="12" lg="12" style="text-right"><field-ref name="submitButton"/></field-col>
                </field-col-row>
            </field-layout>
        </form-single>
    </widgets>

</screen>
