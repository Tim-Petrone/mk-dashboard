<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Application"
        default-menu-index="2">

    <parameter name="orderId" required="true"/>

    <actions>
        <entity-find-one entity-name="mantle.order.OrderHeader" value-field="orderHeader"/>
        <entity-find-one entity-name="mantle.order.OrderPart" value-field="orderPart">
            <field-map field-name="orderId" from="orderId"/>
            <field-map field-name="orderPartSeqId" value="01"/>
        </entity-find-one>
        <entity-find-related value-field="orderPart" relationship-name="parties" list="partyList"/>
    </actions>

    <widgets>
        <container style="row">
            <section-iterate name="PartySection" list="partyList" entry="party">
                <actions>
                    <entity-find-one entity-name="mantle.party.PartyDetail" value-field="partyDetail">
                        <field-map field-name="partyId" from="party.partyId"/>
                    </entity-find-one>
                    <entity-find-one entity-name="mantle.party.RoleType" value-field="roleType">
                        <field-map field-name="roleTypeId" from="party.roleTypeId"/>
                    </entity-find-one>
                    <service-call name="mkdecision.dashboard.PartyServices.get#PartyName" out-map="context">
                        <field-map field-name="partyId" from="party.partyId"/>
                    </service-call>
                    <service-call name="mkdecision.dashboard.PartyServices.get#PartyPrimaryTelecomNumber" out-map="context">
                        <field-map field-name="partyId" from="party.partyId"/>
                    </service-call>
                    <service-call name="mkdecision.dashboard.PartyServices.get#PartyPrimaryEmailAddress" out-map="context">
                        <field-map field-name="partyId" from="party.partyId"/>
                    </service-call>
                    <service-call name="mkdecision.dashboard.PartyServices.get#PartyPrimaryPostalAddress" out-map="context">
                        <field-map field-name="partyId" from="party.partyId"/>
                    </service-call>
                </actions>
                <widgets>
                    <section name="PersonSection" condition="partyDetail.partyTypeEnumId == 'PtyPerson'">
                        <widgets>
                            <container style="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                <container-box>
                                    <box-header title="${partyName}"/>
                                    <box-body>
                                        <container style="q-pb-sm">
                                            <label text="${roleType.description}"/>
                                        </container>
                                        <container>
                                            <label text="Personal" type="h6" style="q-pb-sm"/>
                                            <container style="q-pb-md">
                                                <container-row>
                                                    <row-col lg="6" sm="6" xs="6"><label text="First Name" style="text-grey"/></row-col>
                                                    <row-col lg="6" sm="6" xs="6"><label text="${partyDetail.firstName ?: '-'}"/></row-col>
                                                </container-row>
                                                <container-row>
                                                    <row-col lg="6" sm="6" xs="6"><label text="Last Name" style="text-grey"/></row-col>
                                                    <row-col lg="6" sm="6" xs="6"><label text="${partyDetail.lastName ?: '-'}"/></row-col>
                                                </container-row>
                                            </container>

                                            <label text="Contact" type="h6" style="q-pb-sm"/>
                                            <container>
                                                <container-row>
                                                    <row-col lg="6" sm="6" xs="6"><label text="Email" style="text-grey"/></row-col>
                                                    <row-col lg="6" sm="6" xs="6"><label text="${emailAddress ?: '-'}"/></row-col>
                                                </container-row>
                                                <container-row>
                                                    <row-col lg="6" sm="6" xs="6"><label text="Mobile Phone Number" style="text-grey"/></row-col>
                                                    <row-col lg="6" sm="6" xs="6"><label text="${telecomNumber ?: '-'}"/></row-col>
                                                </container-row>
                                                <container-row>
                                                    <row-col lg="6" sm="6" xs="6"><label text="Residential Address" style="text-grey"/></row-col>
                                                    <row-col lg="6" sm="6" xs="6"><label text="${postalAddress ?: '-'}"/></row-col>
                                                </container-row>
                                            </container>
                                        </container>
                                    </box-body>
                                </container-box>
                            </container>
                        </widgets>
                    </section>
                </widgets>
            </section-iterate>
        </container>


